
<h2>Listado de cervezas</h2>

<!-- views/bears.hbs -->
<div class="wrap-container">
    {{#each data}}
    <div class="beers-container">
        <div>
            <a href=""><img src="{{image_url}}" alt="{{ name }}"></a>
        </div>
        <div class="text-container2">
            <h1>{{this.name}}</h1>
            <h2>{{this.tagline}}</h2>
            <p>{{this.description}}</p>
        </div>
    </div>
    {{/each}}
</div>